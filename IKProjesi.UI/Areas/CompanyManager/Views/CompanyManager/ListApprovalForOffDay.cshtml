
@{
    ViewData["Title"] = "ListApprovalForOffDay";
    Layout = "~/Areas/CompanyManager/Views/Shared/_CompanyManagerLayout.cshtml";

}
@model List<ListWaitingApprovalForOffDaysVm>


<h1>ApprovalForOffDay</h1>

<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">İzin Talepleri</h5>
                <div class="row">

                    @foreach (var offDays in Model)
                    {
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">@offDays.EmployeeFullName</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">@offDays.DayOffType</h6>
                                    <h6 class="card-subtitle mb-2 text-muted">@($"{offDays.DayOffEndTime?.ToString("dd/MM/yyyy")} - {offDays.DayOffStartTime?.ToString("dd/MM/yyyy")}")</h6>
                                    <h6 class="card-subtitle mb-2 text-muted">@offDays.DayNumber</h6>
                                    <h6 class="card-subtitle mb-2 text-muted">İzin Türü: @offDays.DayOffType</h6>
                                    <h6 class="card-subtitle mb-2 text-muted">İstek Zamanı: @offDays.RequestTime?.ToString("dd/MM/yyyy")</h6>
                                    <h6 class="card-subtitle mb-2 text-muted">Onaylanan İzin Süresi: @offDays.DaysOffNumber</h6>
                                    <h6 class="card-subtitle mb-2 text-muted">Onay Türü: @offDays.ApprovalType</h6>
                                    <div class="mb-3 form-group">
                                        <a asp-area="CompanyManager" asp-controller="CompanyManager" asp-action="GetApprovalForOffDay" class="card-link btn btn-danger rounded-3 fw-semibold">Talep Detayları</a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                    
                </div>
            </div>
        </div>
    </div>
</div>



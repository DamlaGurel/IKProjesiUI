@{
    ViewData["Title"] = "ListApprovalForExpense";
    Layout = "~/Areas/CompanyManager/Views/Shared/_CompanyManagerLayout.cshtml";
}




@model List<ListWaitingApprovalForExpenseVM>

<link href="~/assets/css/cardStyle.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"/>




<div class="container-fluid">
    <div class="row justify-content-center ">
        <div class="card cb1 text-center">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Harcama Talepleri</h5>
                <div class="row">

                    @foreach (var expense in Model)
                    {
                        <div class="col-md-4">
                            <div class="card cb-1">
                                <div class="card-body">
                                    <h5 class="card-title">Ad Soyad: @expense.EmployeeFullName</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">Harcama Türü: @expense.ExpenseType</h6>
                                    <h6 class="card-subtitle mb-2 text-muted">Onay Türü: @EnumExtensions.GetDisplayName((ApprovalType)expense.ApprovalType)</h6>
                                    <div class="mb-3 form-group">
                                        <a asp-area="CompanyManager" asp-controller="CompanyManager" asp-action="GetApprovalForExpense" class="card-link btn btn-danger rounded-3 fw-semibold">Talep Detayları</a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>



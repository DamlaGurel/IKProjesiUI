<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">İzin Talepleri</h5>
                <div class="row">

                    @foreach (var offDays in Model)
                    {
                        <form asp-area="CompanyManager" asp-controller="CompanyManager" asp-action="GetCompanyManagerSummary" method="get">
                            <div class="table-responsive">
                                <table class="table text-nowrap mb-0 align-middle">
                                    <tbody>
                                        <tr>
                                            <td class="border-bottom-0 fw-semibold mb-1 fs-4">Talep Eden Kişinin Adı</td>
                                            <td class="border-bottom-0 fw-normal mb-1 fs-4">@offDays.EmployeeId</td>
                                        </tr>
                                        <tr>
                                            <td class="border-bottom-0 fw-semibold mb-1 fs-4">Avans Tutarı</td>
                                            <td class="border-bottom-0 fw-normal mb-1 fs-4">@offDays.TotalAdvance</td>
                                        </tr>
                                        <tr>
                                            <td class="border-bottom-0 fw-semibold mb-1 fs-4">Avans Türü</td>
                                            <td class="border-bottom-0 fw-normal mb-1 fs-4">@offDays.AdvanceType</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-semibold mb-1 fs-4">Onay Türünü Seçiniz</td>
                                            <td class="fw-normal mb-1 fs-4">
                                                <div class="form-group">
                                                    <select name="ApprovalType" class="form-select" id="ApprovalType">
                                                        <option value="">Onay Türünü Seçiniz</option>
                                                        @foreach (var type in Enum.GetValues(typeof(ApprovalType)))
                                                        {
                                                            int intValue = EnumExtension.ConvertToInt((ApprovalType)type);
                                                            <option value="@intValue">@((type as Enum).GetDisplayName())</option>
                                                        }
                                                    </select>
                                                    <span asp-validation-for="@offDays.ApprovalType" class="text-danger"></span>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="row mt-3">
                                <div class="col">
                                    <button type="submit" class="btn btn-danger rounded-3 fw-semibold">Kaydet</button>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "ListApprovalForAdvancePayment";
    Layout = "~/Areas/CompanyManager/Views/Shared/_CompanyManagerLayout.cshtml";
}



@model List<ListWaitingApprovalForAdvancePaymentVM>

<link href="~/assets/css/cardStyle.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">



<div class="container-fluid">
    <div class="row justify-content-center ">
        <div class="card cb1 text-center">
            <div class="card-body cb-1">
                <h5 class="card-title fw-semibold mb-4">Avans Talepleri</h5>
                <div class="row">

                    @foreach (var offDays in Model)
                    {
                        <form asp-area="CompanyManager" asp-controller="CompanyManager" asp-action="GetApprovalForAdvancePayment" method="get">
                            <div class="table-responsive">
                                <table class="table text-nowrap mb-0 align-middle">
                                    <tbody>
                                        <tr>
                                            <td class="border-bottom-0 fw-semibold mb-1 fs-4">Talep Eden Kişinin Adı</td>
                                            <td class="border-bottom-0 fw-normal mb-1 fs-4">@offDays.EmployeeId</td>
                                        </tr>
                                        <tr>
                                            <td class="border-bottom-0 fw-semibold mb-1 fs-4">Avans Tutarı</td>
                                            <td class="border-bottom-0 fw-normal mb-1 fs-4">@offDays.TotalAdvance</td>
                                        </tr>
                                        <tr>
                                            <td class="border-bottom-0 fw-semibold mb-1 fs-4">Avans Türü</td>
                                            <td class="border-bottom-0 fw-normal mb-1 fs-4">@offDays.AdvanceType</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="row mt-3">
                                <div class="col">
                                    <button type="submit" class="btn rounded-3 fw-semibold">Detaylara Git</button>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

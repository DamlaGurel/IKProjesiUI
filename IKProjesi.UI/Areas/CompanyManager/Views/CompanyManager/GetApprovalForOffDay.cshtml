@model UpdateDayOffVM

@{
    ViewData["Title"] = "GetApprovalForOffDay";
    Layout = "~/Areas/CompanyManager/Views/Shared/_CompanyManagerLayout.cshtml";
}


<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4 text-primary text-center fs-8">Talep Detayları</h5>
                <form asp-controller="CompanyManager" asp-action="GetApprovalForOffDay" method="post">

                    <div class="table-responsive">
                        <table class="table text-nowrap mb-0 align-middle">
                            <tbody>
                                <tr>
                                    <td class="border-bottom-0 fw-semibold mb-1 fs-4">Talep Eden Kişinin Adı</td>
                                    <td class="border-bottom-0 fw-normal mb-1 fs-4">@Model.EmployeeFullName</td>
                                </tr>
                                <tr>
                                    <td class="border-bottom-0 fw-semibold mb-1 fs-4">İzin Başlangıç Tarihi</td>
                                    <td class="border-bottom-0 fw-normal mb-1 fs-4">@Model.DayOffStartTime.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <td class="border-bottom-0 fw-semibold mb-1 fs-4">İzin Bitiş Tarihi</td>
                                    <td class="border-bottom-0 fw-normal mb-1 fs-4">@Model.DayOffEndTime.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <td class="border-bottom-0 fw-semibold mb-1 fs-4">İzin Türü</td>
                                    <td class="border-bottom-0 fw-normal mb-1 fs-4" id="DayOffType">@Model.DayOffType</td>

                                <tr>
                                    <td class="fw-semibold mb-1 fs-4">Onay Türünü Seçiniz</td>
                                    <td class="fw-normal mb-1 fs-4">
                                        <div class="form-group">
                                            <select asp-for="ApprovalType" class="form-select" id="ApprovalType">
                                                <option value="">Onay Türünü Seçiniz</option>
                                                @foreach (var type in Enum.GetValues(typeof(ApprovalType)))
                                                {
                                                    int intValue = EnumExtension.ConvertToInt((ApprovalType)type);
                                                    <option value="@intValue">@((type as Enum).GetDisplayName())</option>
                                                }
                                            </select>
                                            <span asp-validation-for="ApprovalType" class="text-danger"></span>
                                        </div>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>

                    <div class="row mt-3">
                        <div class="col">
                            <button type="submit" class="btn btn-danger rounded-3 fw-semibold">Kaydet</button>
                        </div>
                        <div class="col">
                            <a asp-controller="CompanyManager" asp-action="ListApprovalForOffDay" class="btn btn-danger rounded-3 fw-semibold">Talep Listesine Geri Dön</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



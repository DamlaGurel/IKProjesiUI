
@{
    ViewData["Title"] = "AddCompanyManager";
    Layout = "~/Areas/SiteManager/Views/Shared/_SiteManagerLayout.cshtml";
}

@model CreateCompanyManagerVm

<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Şirket Yöneticisi Oluştur</h5>
                <form asp-action="AddCompanyManager" method="post">
                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label">Adı</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SecondName" class="form-label">İkinci Adı</label>
                        <input asp-for="SecondName" class="form-control" />
                        <span asp-validation-for="SecondName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label">Soyadı</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SecondLastName" class="form-label">İkinci Soyadı</label>
                        <input asp-for="SecondLastName" class="form-control" />
                        <span asp-validation-for="SecondLastName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="BirthDate" class="form-label">Doğum Tarihi</label>
                        <input asp-for="BirthDate" type="date" class="form-control" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="IdentityNumber" class="form-label">TC Kimlik No</label>
                        <input asp-for="IdentityNumber" class="form-control" />
                        <span asp-validation-for="IdentityNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="JobName" class="form-label">Meslek</label>
                        <select asp-for="JobName" class="form-select">
                            <option value="">Seçiniz</option>
                            @foreach (var job in Enum.GetValues(typeof(Job)))
                            {
                                <option value="@job">@job</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DepartmentName" class="form-label">Departman</label>
                        <select asp-for="DepartmentName" class="form-select">
                            <option value="">Seçiniz</option>
                            @foreach (var department in Enum.GetValues(typeof(Department)))
                            {
                                <option value="@department">@department</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label">Adres</label>
                        <textarea asp-for="Address" class="form-control"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>





@model SiteManagerDetailsVM

@{
    ViewData["Title"] = "GetSiteManagerDetail";
    Layout = "~/Areas/SiteManager/Views/Shared/_SiteManagerLayout.cshtml";
}


<link href="~/assets/css/cardStyle.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"/>


<div class="container-fluid">
    <div class="row justify-content-center ">
        <div class="card cb1 text-center">
            <div class="card-body cb-1">
                <h5 class="card-title fw-semibold mb-4 text-primary text-center fs-8">Site Yöneticisi Detayları</h5>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Adı:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.FirstName">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">İkinci Adı:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.SecondName">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Soyadı:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.LastName">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">İkinci Soyadı:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.SecondLastName">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Şifre:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.Password">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Doğum Tarihi:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.BirthDate.ToShortDateString()">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Doğum Yeri:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.BirthPlace">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">TC Kimlik Numarası:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.IdentityNumber">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">İşe Başlangıç Tarihi:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.StartDateOfWork.ToShortDateString()">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">İşten Çıkış Tarihi:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.FinishDateOfWork">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Meslek:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.JobName">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Departman:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.DepartmentName">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Adres:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.Address">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Telefon Numarası:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.PhoneNumber">
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a class="btn btn-danger rounded-3 fw-semibold" asp-controller="SiteManager" asp-action="GetSiteManagerSummary">Geri Dön</a>
                    <a class="btn btn-danger rounded-3 fw-semibold" asp-controller="SiteManager" asp-action="GetSiteManagerUpdate">Düzenle</a>
                </div>
            </div>
        </div>
    </div>
</div>



@model SiteManagerDetailsVM

@{
    ViewData["Title"] = "GetSiteManagerDetail";
    Layout = "~/Areas/SiteManager/Views/Shared/_SiteManagerLayout.cshtml";
}



<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4 text-primary text-center fs-8">Site Yöneticisi Detayları</h5>
                <div class="table-responsive">
                    <table class="table text-nowrap mb-0 align-middle">
                        <tbody>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Adı</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.FirstName</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">İkinci Adı</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.SecondName</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Soyadı</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.LastName</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">İkinci Soyadı</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.SecondLastName</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Şifre</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.Password</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Doğum Tarihi</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.BirthDate</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Doğum Yeri</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.BirthPlace</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">TC Kimlik Numarası</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.IdentityNumber</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">İşe Başlangıç Tarihi</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.StartDateOfWork</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">İşten Çıkış Tarihi</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.FinishDateOfWork</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Meslek</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.JobName</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Departman</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.DepartmentName</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Adres</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.Address</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Telefon Numarası</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.PhoneNumber</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Resim Yolu</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.ImagePath</td>
                            </tr>
                        </tbody>
                    </table>

                </div>
                <div class="mb-3">
                    <a class="btn btn-danger rounded-3 fw-semibold" asp-controller="SiteManager" asp-action="GetSiteManagerUpdate">Düzenle</a>
                </div>
                <div class="mb-3">
                    <a class="btn btn-danger rounded-3 fw-semibold" asp-controller="SiteManager" asp-action="Index">Geri Dön</a>
                </div>
            </div>

        </div>
    </div>
</div>


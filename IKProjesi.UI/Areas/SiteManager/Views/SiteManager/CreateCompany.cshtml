@model CreateCompanyVM

@{
    ViewData["Title"] = "CreateCompany";
    Layout = "~/Areas/SiteManager/Views/Shared/_SiteManagerLayout.cshtml";
}

<link href="~/assets/css/cardStyle.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />


<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="card cb1">

            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4 text-center text-primary">Şirket Oluştur</h5>
                <div class="row">

                    <form asp-area="SiteManager" asp-controller="SiteManager" asp-action="CreateCompany" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3 form-group">
                            <label asp-for="CompanyName" class="control-label">Şirket Adı</label>
                            <input asp-for="CompanyName" class="form-control" />
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group">
                            <label asp-for="CompanyTitle" class="control-label">Şirket Başlığı</label>
                            <input asp-for="CompanyTitle" class="form-control" />
                            <span asp-validation-for="CompanyTitle" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group">
                            <label asp-for="MersisNumber" class="control-label">Mersis Numarası</label>
                            <input asp-for="MersisNumber" class="form-control" />
                            <span asp-validation-for="MersisNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group">
                            <label asp-for="CompanyTaxNumber" class="control-label">Vergi Numarası</label>
                            <input asp-for="CompanyTaxNumber" class="form-control" />
                            <span asp-validation-for="CompanyTaxNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group">
                            <label asp-for="CompanyTaxOffice" class="control-label">Vergi Ofisi</label>
                            <input asp-for="CompanyTaxOffice" class="form-control" />
                            <span asp-validation-for="CompanyTaxOffice" class="text-danger"></span>
                        </div>

                        <div class=" mb-3 form-group">
                            <label asp-for="PhoneNumber" class="control-label">Telefon Numarası</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group">
                            <label asp-for="Address" class="control-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group">
                            <label asp-for="Email" class="control-label">E-Posta</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group">
                            <label asp-for="EmployeeNumber" class="control-label">Çalışan Sayısı</label>
                            <input asp-for="EmployeeNumber" class="form-control" />
                            <span asp-validation-for="EmployeeNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group">
                            <label asp-for="FoundationYear" class="control-label">Kuruluş Yılı</label>
                            <input asp-for="FoundationYear" type="date" class="form-control" />
                            <span asp-validation-for="FoundationYear" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group">
                            <label asp-for="StartContractDate" class="control-label">Sözleşme Başlangıç Tarihi</label>
                            <input asp-for="StartContractDate" type="date" class="form-control" />
                            <span asp-validation-for="StartContractDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group">
                            <label asp-for="EndContractDate" class="control-label">Sözleşme Bitiş Tarihi</label>
                            <input asp-for="EndContractDate" type="date" class="form-control" />
                            <span asp-validation-for="EndContractDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group">
                            <label asp-for="Logo" class="control-label"></label>
                            <div>
                                <input asp-for="Logo" type="file" class="form-control" id="inputGroupFile02" name="Logo" />
                                <label class="custom-file-label" for="customFile">Dosya Seçiniz</label>
                            </div>
                            <span asp-validation-for="Logo" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group">
                            <input type="submit" value="Kaydet" class="btn btn-danger rounded-3 fw-semibold" />
                        </div>
                        <div>
                            <a asp-action="CompanyIndex" class="btn btn-danger rounded-3 fw-semibold">Şirket Listesine Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



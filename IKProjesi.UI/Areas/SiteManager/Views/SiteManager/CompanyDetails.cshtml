@model CompanyDetailsVM

@{
    ViewData["Title"] = "CompanyDetails";
    Layout = "~/Areas/SiteManager/Views/Shared/_SiteManagerLayout.cshtml";
}


<link href="~/assets/css/cardStyle.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


<div class="container-fluid">
    <div class="row justify-content-center ">
        <div class="card cb1 text-center">
            <div class="card-body cb-1">
                <h5 class="card-title fw-semibold mb-4 text-primary text-center fs-8">Şirket Detayları</h5>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Şirket Adı:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.CompanyName">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Şirket Başlığı:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.CompanyTitle">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Mersis Numarası:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.MersisNumber">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Vergi Numarası:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.CompanyTaxNumber">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Vergi Dairesi:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.CompanyTaxOffice">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Telefon Numarası:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.PhoneNumber">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Adres:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.Address">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Mail:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.Email">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Çalışan Sayısı:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.EmployeeNumber">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Şirket Kuruluş Yılı:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.FoundationYear.ToShortDateString()">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Sözleşme Başlama Tarihi:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.StartContractDate.ToShortDateString()">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Sözleşme Bitiş Tarihi:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.EndContractDate.ToShortDateString()">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Şirketin Sisteme Eklenme Tarihi:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.CreatedDate.ToShortDateString()">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Şirketin Sistemde Son Güncellenme Tarihi:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.UpdatedDate">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-6 col-form-label fs-5">Şirketin Silinme Tarihi:</label>
                    <div class="col-sm-6">
                        <input type="text" readonly class="form-control-plaintext fs-5" value="@Model.DeletedDate">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="LogoBytes" class="form-label fw-semibold">Logo:</label>
                    <img src="data:image;base64,@(Convert.ToBase64String(Model.LogoBytes))" class="img-fluid" alt="Company Logo">
                </div>
                <div>
                    <a class="btn btn-danger rounded-3 fw-semibold" asp-controller="SiteManager" asp-action="CompanyIndex">Şirket Listesine Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>


@model CompanyDetailsVM

@{
    ViewData["Title"] = "CompanyDetails";
    Layout = "~/Areas/SiteManager/Views/Shared/_SiteManagerLayout.cshtml";
}

<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4 text-primary text-center fs-8">Şirket Detayları</h5>
                <div class="table-responsive">
                    <table class="table text-nowrap mb-0 align-middle">
                        <tbody>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4"> Şirket Adı</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.CompanyName</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4"> Şirket Başlığı</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.CompanyTitle</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Mersis Numarası</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.MersisNumber</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Vergi Numarası</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.CompanyTaxNumber</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Vergi Dairesi</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.CompanyTaxOffice</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Telefon Numarası</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.PhoneNumber</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Adres</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.Address</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">E-Posta</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.Email</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Çalışan Sayısı</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.EmployeeNumber</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Kuruluş Yılı</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.FoundationYear</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Sözleşme Başlama Tarihi</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.StartContractDate</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Sözleşme Bitiş Tarihi</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.EndContractDate</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Şirketin Sisteme Eklenme Tarihi</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.CreatedDate</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Şirketin Sistemdeki Son Güncellenme Tarihi</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.UpdatedDate</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0 fw-semibold mb-1 fs-4">Şirketin Sistemden Silinme Tarihi</td>
                                <td class="border-bottom-0 fw-normal mb-1 fs-4"> @Model.DeletedDate</td>
                            </tr>
                            <tr>
                                <label for="LogoBytes" class="form-label fw-semibold">Logo</label>
                                <img src="data:image;base64,@(Convert.ToBase64String(Model.LogoBytes))" class="img-fluid" alt="Company Logo">
                            </tr>
                        </tbody>
                    </table>
                   
                    <div>
                        <a class="badge bg-danger rounded-3 fw-semibold" asp-controller="SiteManager" asp-action="CompanyIndex">Şirket Listesine Dön</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

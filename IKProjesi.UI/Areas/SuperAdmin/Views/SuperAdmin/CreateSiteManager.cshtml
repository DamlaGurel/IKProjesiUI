@{
    ViewData["Title"] = "CreateSiteManager";
    Layout = "~/Areas/SuperAdmin/Views/Shared/_SuperAdminLayout.cshtml";

}

@model CreateSiteManagerVM

<link href="~/assets/css/cardStyle.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


<div class="">
    <div class="row justify-content-center ">
        <div class="card cb1" >
            <div class="card-body">

                <h5 class="card-title fw-semibold mb-4 text-center text-danger">Site Yöneticisi Oluştur</h5>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form asp-area="SuperAdmin" asp-controller="SuperAdmin" asp-action="CreateSiteManager" enctype="multipart/form-data" method="post">
                    <div class="mb-3 form-group">
                        <label asp-for="@Model.IdentityNumber" class="control-label">TC Kimlik Numarası</label>
                        <input asp-for="@Model.IdentityNumber" type="text" class="form-control" />
                        <span asp-validation-for="@Model.IdentityNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="@Model.FirstName" class="control-label">Adı</label>
                        <input asp-for="@Model.FirstName" type="text" class="form-control" />
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="@Model.SecondName" class="control-label">İkinci Adı</label>
                        <input asp-for="@Model.SecondName" type="text" class="form-control" />
                        <span asp-validation-for="@Model.SecondName" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="@Model.LastName" class="control-label">Soyadı</label>
                        <input asp-for="@Model.LastName" type="text" class="form-control" />
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="@Model.SecondLastName" class="control-label">İkinci Soyadı</label>
                        <input asp-for="@Model.SecondLastName" type="text" class="form-control" />
                        <span asp-validation-for="@Model.SecondLastName" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="@Model.PersonalEmail" class="control-label">Email</label>
                        <input asp-for="@Model.PersonalEmail" type="email" class="form-control" />
                        <span asp-validation-for="@Model.PersonalEmail" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="@Model.BirthDate" class="control-label">Doğum Tarihi</label>
                        <input asp-for="@Model.BirthDate" type="date" class="form-control" />
                        <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="@Model.BirthPlace" class="control-label">Doğum Yeri</label>
                        <input asp-for="@Model.BirthPlace" type="text" class="form-control" />
                        <span asp-validation-for="@Model.BirthPlace" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="@Model.Address" class="control-label">Adres</label>
                        <textarea asp-for="@Model.Address" type="text" class="form-control"></textarea>
                        <span asp-validation-for="@Model.Address" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="@Model.PhoneNumber" class="control-label">Telefon Numarası</label>
                        <input asp-for="@Model.PhoneNumber" type="number" class="form-control" />
                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="@Model.StartDateOfWork" class="control-label">İşe Başlangıç Tarihi</label>
                        <input asp-for="@Model.StartDateOfWork" type="date" class="form-control" />
                        <span asp-validation-for="@Model.StartDateOfWork" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="@Model.Department" class="control-label">Departman</label>
                        <select id="Department" name="Department" class="form-select">
                            <option value="">Seçiniz</option>
                            @foreach (var department in ViewBag.Department)
                            {
                                <option value="@department">@EnumExtensions.GetDisplayName(department)</option>
                            }
                        </select>
                        <span asp-validation-for="@Model.Department" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="@Model.Password" class="control-label">Şifre</label>
                        <input asp-for="@Model.Password" type="text" class="form-control" />
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <input asp-for="@Model.Image" type="file" class="form-control" id="inputGroupFile02" />
                        <label class="custom-file-label" for="customFile">Dosya Seçiniz</label>
                    </div>
                    <span asp-validation-for="@Model.Image" class="text-danger"></span>
                    <div class=" mb-3 form-group">
                        <div>
                            <input type="submit" class="btn btn-danger rounded-3 fw-semibold" value="Kaydet" />
                        </div>
                    </div>
                    <div class=" mb-3 form-group">
                        <div>
                            <a asp-controller="SuperAdmin" asp-action="Index" class="btn btn-danger rounded-3 fw-semibold ">Site Yöneticileri Listesine Dön</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
    













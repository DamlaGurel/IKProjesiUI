
@{
    ViewData["Title"] = "ListExpense";
    Layout = "~/Areas/Employee/Views/Shared/_EmployeeLayout.cshtml";
}


@model List<ListExpenseVM>

    <link href="~/assets/css/cardStyle.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />

    <div class="container-fluid">
        <div class="row justify-content-center ">
            <div class="card cb1 text-center">
                <div class="card-body cb-1">
                    <h5 class="card-title fw-semibold mb-4 text-primary text-center fs-8">Avans Taleplerim</h5>
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-4">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <table class="table text-nowrap mb-0 align-middle">
                                            <tbody>
                                                <tr>
                                                    <td class="fw-semibold">Para Türü</td>
                                                    <td class="fw-normal">@EnumExtensions.GetDisplayName((MoneyType)item.MoneyType)</td>
                                                </tr>
                                                <tr>
                                                    <td class="fw-semibold">Harcama Türü</td>
                                                    <td class="fw-normal">@EnumExtensions.GetDisplayName((ExpenseType)item.ExpenseType)</td>
                                                </tr>
                                                <tr>
                                                    <td class="fw-semibold">Toplam Tutar</td>
                                                    <td class="fw-normal">@item.TotalExpense</td>
                                                </tr>
                                                <tr>
                                                    <td class="fw-semibold">Onay Durumu</td>
                                                    <td class="fw-normal">@EnumExtensions.GetDisplayName((ApprovalType)item.ApprovalType)</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div>
                        <a class="btn btn-danger rounded-3 fw-semibold" asp-controller="Employee" asp-action="Index">Geri Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
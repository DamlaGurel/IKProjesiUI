@model CreateExpenseVM

@{
    ViewData["Title"] = "CreateExpense";
    Layout = "~/Areas/Employee/Views/Shared/_EmployeeLayout.cshtml";
}

<link href="~/assets/css/cardStyle.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="card cb1">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4 text-center text-primary">Şirket Yöneticisi Oluştur</h5>
                <div class="row">
                    <form asp-area="Employee" asp-controller="Employee" asp-action="CreateExpense" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="EmployeeId" />
                        <div class="mb-3 form-group">
                            <label asp-for="ExpenseType" class="control-label">Harcama Türü</label>
                            <select id="ExpenseType" name="ExpenseType" class="form-select">
                                <option value="">Seçiniz</option>
                                @foreach (var expense in ViewBag.ExpenseTypes)
                                {
                                    <option value="@expense">@EnumExtensions.GetDisplayName(expense)</option>
                                }
                            </select>
                            <span asp-validation-for="ExpenseType" class="text-danger"></span>
                        </div>


                        <div class="mb-3 form-group">
                            <label asp-for="MoneyType" class="control-label">Para Birimi</label>
                            <select id="MoneyType" name="MoneyType" class="form-select">
                                <option value="">Seçiniz</option>
                                @foreach (var money in ViewBag.MoneyType)
                                {
                                    <option value="@money">@EnumExtensions.GetDisplayName(money)</option>
                                }
                            </select>
                            <span asp-validation-for="MoneyType" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group">
                            <label asp-for="TotalExpense" class="control-label">Harcama Ücreti</label>
                            <input asp-for="TotalExpense" class="form-control" />
                            <span asp-validation-for="TotalExpense" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group">
                            <label asp-for="File" class="control-label"></label>
                            <div>
                                <input asp-for="File" type="file" class="form-control" id="inputGroupFile02" accept=".pdf,.png,.jpeg">
                                <label class="custom-file-label" for="customFile">Dosya Seçiniz</label>
                            </div>
                            <span asp-validation-for="File" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <input type="submit" class="btn btn-danger rounded-3 fw-semibold" value="Kaydet" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

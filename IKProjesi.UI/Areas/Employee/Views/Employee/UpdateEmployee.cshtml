@using IKProjesi.UI.Models.VMs.EmployeeVMs

@{
    ViewData["Title"] = "EmployeeDetails";
    Layout = "~/Areas/Employee/Views/Shared/_EmployeeLayout.cshtml";
}

@model UpdateEmployeeVM

﻿@{
    var successMessage = TempData["UpdateMessage"] as string;
}
<script>
    setTimeout(function () {
        $('#updateMessage').fadeOut('slow');
    }, 5000);
</script>

@if (successMessage is not null)
{
    <div id="updateMessage" class="alert alert-success" role="alert">
        @successMessage
    </div>
}

<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4 text-primary text-center fs-8">Personel Düzenle</h5>

                <form asp-controller="Employee" asp-action="UpdateEmployee" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="@Model.Id" />

                    <div class="mb-3 form-group">
                        <label asp-for="@Model.Address" class="control-label">Adres</label>
                        <input asp-for="@Model.Address" class="form-control" />
                        <span asp-validation-for="@Model.Address" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="@Model.PhoneNumber" class="control-label">Telefon Numarası</label>
                        <input asp-for="@Model.PhoneNumber" class="form-control" />
                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="@Model.Image" class="control-label">Fotoğraf</label>
                        <div>
                            <input asp-for="@Model.Image" type="file" class="form-control" id="inputGroupFile02" name="Image" />
                        </div>
                        <span asp-validation-for="@Model.Image" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <input type="submit" value="Kaydet" class="btn btn-danger rounded-3 fw-semibold" />
                    </div>
                    <div class=" mb-3 form-group">
                        <div>
                            <a asp-controller="CompanyManager" asp-action="Index" class="btn btn-danger rounded-3 fw-semibold ">Geri Dön</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

@{
    ViewData["Title"] = "ListTakeDayOff";
    Layout = "~/Areas/Employee/Views/Shared/_EmployeeLayout.cshtml";
}



@model List<ListOffDayVM>
    <link href="~/assets/css/cardStyle.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />

    <div class="container-fluid">
        <div class="row justify-content-center ">
            <div class="card cb1 text-center">
                <div class="card-body cb-1">
                    <h5 class="card-title fw-semibold mb-4 text-primary text-center fs-8">
                        İzinlerim
                    </h5>
                    <div class="row">

                        @foreach (var offDays in Model)
                        {
                            <div class="col-md-4">
                                <div class="card">

                                    <div class="card-body">
                                        <h5 class="card-title">İzin Türü: @EnumExtensions.GetDisplayName((DayOffType)offDays.DayOffType)</h5>
                                        <h6 class="card-subtitle mb-2 text-muted">Başlangıç Tarihi: @offDays.DayOffStartTime?.ToShortDateString()</h6>
                                        <h6 class="card-subtitle mb-2 text-muted">Bitiş Tarihi: @offDays.DayOffEndTime?.ToShortDateString()</h6>

                                        <p class="card-text">
                                            <strong>Onay Durumu: @EnumExtensions.GetDisplayName((ApprovalType)offDays.ApprovalType)  </strong><br />
                                            <strong>İstek Zamanı: @offDays.RequestTime?.ToString("dd.MM.yyyy")</strong><br />
                                            <strong>İstek Onay Zamanı: @offDays.ResponseTime</strong><br />
                                            <strong>Onaylanan İzin Süresi: @offDays.RequestOffDayNumber</strong>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div>
                        <a class="btn btn-danger rounded-3 fw-semibold" asp-controller="Employee" asp-action="Index">Geri Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>



<div class="container-fluid">
    <div class="row justify-content-center ">
        <div class="card cb1 text-center">
            <div class="card-body cb-1">
                <h5 class="card-title fw-semibold mb-4 text-primary text-center fs-8">Personel Detayları</h5>
                <div class="mb-3">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="fw-semibold mb-1 fs-4">Adı:</div>
                            <div class="fw-semibold mb-1 fs-4">İkinci Adı:</div>
                            <div class="fw-semibold mb-1 fs-4">Soyadı:</div>
                            <div class="fw-semibold mb-1 fs-4">İkinci Soyadı:</div>
                            <div class="fw-semibold mb-1 fs-4">Doğum Tarihi:</div>
                            <div class="fw-semibold mb-1 fs-4">Doğum Yeri:</div>
                            <div class="fw-semibold mb-1 fs-4">TC Kimlik Numarası:</div>
                            <div class="fw-semibold mb-1 fs-4">İşe Başlangıç Tarihi:</div>
                            <div class="fw-semibold mb-1 fs-4">İşten Çıkış Tarihi:</div>
                            <div class="fw-semibold mb-1 fs-4">Şirket Adı:</div>
                            <div class="fw-semibold mb-1 fs-4">Meslek:</div>
                            <div class="fw-semibold mb-1 fs-4">Departman:</div>
                            <div class="fw-semibold mb-1 fs-4">Adres:</div>
                            <div class="fw-semibold mb-1 fs-4">Telefon Numarası:</div>
                            <div class="fw-semibold mb-1 fs-4">Profil Resmi:</div>
                        </div>

                        <div class="col-md-12">
                            <div class="mb-1 fs-4">@Model.FirstName</div>
                            <div class="mb-1 fs-4">@Model.SecondName</div>
                            <div class="mb-1 fs-4">@Model.LastName</div>
                            <div class="mb-1 fs-4">@Model.SecondLastName</div>
                            <div class="mb-1 fs-4">@Model.BirthDate.ToShortDateString()</div>
                            <div class="mb-1 fs-4">@Model.BirthPlace</div>
                            <div class="mb-1 fs-4">@Model.IdentityNumber</div>
                            <div class="mb-1 fs-4">@Model.StartDateOfWork.ToShortDateString()</div>
                            <div class="mb-1 fs-4">@Model.FinishDateOfWork</div>
                            <div class="mb-1 fs-4">@Model.CompanyName</div>
                            <div class="mb-1 fs-4">@Model.JobName</div>
                            <div class="mb-1 fs-4">@Model.DepartmentName</div>
                            <div class="mb-1 fs-4">@Model.Address</div>
                            <div class="mb-1 fs-4">@Model.PhoneNumber</div>
                            <div class="mb-1 fs-4">
                        </div>
                    </div>
                </div>
                <div>
                    <a class="btn btn-danger rounded-3 fw-semibold" asp-area="Employee" asp-controller="Employee" asp-action="UpdateEmployee" asp-route-id="@Model.Id">Düzenle</a>
                </div>
                <div>
                    <a class="btn btn-danger rounded-3 fw-semibold" asp-controller="CompanyManager" asp-action="Index">Geri Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>

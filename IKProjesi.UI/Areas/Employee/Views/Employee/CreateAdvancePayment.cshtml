@model CreateAdvancePaymentVM

@{
    ViewData["Title"] = "CreateAdvancePayment";
    Layout = "~/Areas/Employee/Views/Shared/_EmployeeLayout.cshtml";
}




<link href="~/assets/css/cardStyle.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="card cb1">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4 text-center text-primary">Avans Talebi</h5>
                <div class="row">
                    <form asp-area="Employee" asp-controller="Employee" asp-action="CreateAdvancePayment" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="EmployeeId" />
                        <input type="hidden" asp-for="Payment" />
                        <div class="mb-3 form-group">
                            <label asp-for="AdvanceType" class="control-label">Avans Türü</label>
                            <select id="AdvanceType" name="AdvanceType" class="form-select">
                                <option value="">Seçiniz</option>
                                @foreach (var advanceType in ViewBag.AdvanceType)
                                {
                                    <option value="@advanceType">@EnumExtensions.GetDisplayName(advanceType)</option>
                                }
                            </select>
                            <span asp-validation-for="AdvanceType" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="MoneyType" class="control-label">Para Tipi</label>
                            <select id="MoneyType" name="MoneyType" class="form-select">
                                <option value="">Seçiniz</option>
                                @foreach (var moneyType in ViewBag.MoneyType)
                                {
                                    <option value="@moneyType">@EnumExtensions.GetDisplayName(moneyType)</option>
                                }
                            </select>
                            <span asp-validation-for="MoneyType" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="Payment" class="control-label">Maaşınız</label>
                            <input asp-for="Payment" type="text" class="form-control" readonly />
                            <span asp-validation-for="Payment" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="TotalAdvance" class="control-label">Avans Miktarı</label>
                            <input asp-for="TotalAdvance" type="text" class="form-control" />
                            <span asp-validation-for="TotalAdvance" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="RequestDate" class="control-label">Talep Tarihi</label>
                            <input asp-for="RequestDate" type="date" class="form-control" />
                            <span asp-validation-for="RequestDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="Description" class="control-label">Açıklama</label>
                            <input asp-for="Description" type="text" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <div>
                                <input type="submit" class="btn btn-danger rounded-3 fw-semibold" value="Talep Et" />
                            </div>
                        </div>
                        <div class="mb-3 form-group">
                            <div>
                                <a asp-controller="Employee" asp-action="GetEmployeeSummary" class="btn btn-danger rounded-3 fw-semibold ">Ana Sayfaya Dön</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

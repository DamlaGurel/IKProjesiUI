@model CreateAdvancePaymentVM

@{
    ViewData["Title"] = "CreateAdvancePayment";
    Layout = "~/Areas/Employee/Views/Shared/_EmployeeLayout.cshtml";
}

<h1>Avans</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAdvancePayment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdvanceType" class="control-label">Avans Talebi</label>
                <select asp-for="AdvanceType" class="form-control">
                    <option value="">Seçiniz</option>
                    @foreach (var advanceTypeName in Enum.GetNames(typeof(AdvanceType)))
                    {
                        <option value="@advanceTypeName">@advanceTypeName</option>
                    }
                </select>
                <span asp-validation-for="AdvanceType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoneyType" class="control-label">Para Tipi</label>
                <select asp-for="MoneyType" class="form-control">
                    <option value="">Seçiniz</option>
                    @foreach (var moneyTypeName in Enum.GetNames(typeof(MoneyType)))
                    {
                        <option value="@moneyTypeName">@moneyTypeName</option>
                    }
                </select>
                <span asp-validation-for="MoneyType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequestDate" class="control-label">Talep Tarihi</label>
                <input asp-for="RequestDate" type="date" class="form-control" />
                <span asp-validation-for="RequestDate" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="TotalAdvance" class="control-label">Talep Edilen Miktar</label>
                <select asp-for="TotalAdvance" type="number" class="form-control" min="0" max="@Model.Salary * 3" step="0.01">Seçiniz</select>
                <span asp-validation-for="TotalAdvance" class="text-danger"></span>
            </div> *@ @*Personel eklendiğinde girilen maaşına göre 3 katı hesaplanacak*@
            <div class="form-group">
                <label asp-for="Description" class="control-label">Açıklama</label>
                <input asp-for="Description" type="text" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label">Personel</label>
                <input asp-for="EmployeeId" type="number" class="form-control" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="mb-3 form-group">
                <div>
                    <input type="submit" class="btn btn-danger rounded-3 fw-semibold" value="Kaydet" />
                </div>
            </div>
            <div class="mb-3 form-group">
                <div>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-danger rounded-3 fw-semibold ">Ana Sayfaya Dön</a>
                </div>
            </div>
        </form>

    </div>

</div>